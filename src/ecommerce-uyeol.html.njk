{% extends "partials/ecommerce-base.html.njk" %}

{% block head %}

{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="container__login">
                <h2>ÜYE KAYIT</h2>
            </div>
            <div class="container__login">
                <div class="container__login__form">
                    <div class="container__login__form__item">
                        <input type="text" id="input-isim">
                        <label class="float" for="input-isim">
                            İsim
                        </label>
                    </div>
                    <div class="container__login__form__item">
                        <input type="text" id="input-soyisim">
                        <label class="float" for="input-soyisim">
                            Soyisim
                        </label>
                    </div>
                    <div class="container__login__form__item">
                        <input type="password" id="input-sifre">
                        <label class="float" for="input-sifre">
                            Şifre
                        </label>
                    </div>
                    <div class="container__login__form__item">
                        <input type="email" id="input-eposta">
                        <label class="float" for="input-eposta">
                            E-posta
                        </label>
                    </div>
                    <div class="container__login__form__item">
                        <input type="text" id="input-telefon">
                        <label class="float" for="input-telefon">
                            Telefon
                        </label>
                    </div>
                    <div class="container__login__form__item form__item__checkbox">
                        <div class="pretty">
                            <input type="checkbox" id="kampanya-eposta"/>
                            <label for="kampanya-eposta">
                                <i class="fa fa-check"></i>
                                <span>
                                    Kampanyalardan e-posta yoluyla haberdar olmak istiyorum.
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="container__login__form__item form__item__checkbox">
                        <div class="pretty">
                            <input type="checkbox" id="kampanya-sms"/>
                            <label for="kampanya-sms"><i class="fa fa-check"></i>
                                <span>
                                    Kampanyalardan SMS yoluyla haberdar olmak istiyorum.
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="container__login__form__item form__item__checkbox">
                        <div class="pretty">
                            <input type="checkbox" id="kampanya-uyelik-sozlesmesi"/>
                            <label for="kampanya-uyelik-sozlesmesi"><i class="fa fa-check"></i>
                                <span>
                                    Üyelik sözleşmesi’ni okudum ve kabul ediyorum.
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="container__login__form__item">
                        <a class="button button__blue button__large" href="#">Kayıt Ol</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container__login__image">
        <img src="img/login.png">
    </div>
{% endblock %}

{% block script %}
    <script src="js/all-input.js"></script>
{% endblock %}