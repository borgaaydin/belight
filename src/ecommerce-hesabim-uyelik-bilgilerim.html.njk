{% extends "partials/ecommerce-base.html.njk" %}

{% block head %}

{% endblock %}

{% block content %}
    <div class="container container__hesabim">
        <div class="row">
            <h2>HESABIM</h2>
            <div class="hesabim__navigation">
                <a href="">
                    <div class="active">
                        <h3>Üyelik Bilgilerim</h3>
                        <div class="hesabim__navigation__icon">
                            <i class="fa fa-address-card"></i>
                        </div>
                    </div>
                </a>
                <a href="">
                    <div>
                        <h3>Şifre İşlemleri</h3>
                        <div class="hesabim__navigation__icon">
                            <i class="fa fa-lock"></i>
                        </div>
                    </div>
                </a>
                <a href="">
                    <div>
                        <h3>Adres Bilgilerim</h3>
                        <div class="hesabim__navigation__icon">
                            <i class="fa fa-address-card"></i>
                        </div>
                    </div>
                </a>
                <a href="">
                    <div>
                        <h3>Siparişlerim</h3>
                        <div class="hesabim__navigation__icon">
                            <i class="fa fa-list-ul"></i>
                        </div>
                    </div>
                </a>
            </div>
            <div class="hesabim__form">
                <div class="hesabim__form__item">
                    <div class="popover top">
                        <div class="arrow"></div>
                        <div class="popover-content">
                            Hata
                        </div>
                    </div>
                    <input type="text" id="input-isim">
                    <label class="float" for="input-isim">
                        İsim
                    </label>
                </div>
                <div class="hesabim__form__item">
                    <div class="popover top">
                        <div class="arrow"></div>
                        <div class="popover-content">
                            Hata
                        </div>
                    </div>
                    <input type="text" id="input-soyisim">
                    <label class="float" for="input-soyisim">
                        Soyisim
                    </label>
                </div>
                <div class="container__login__form__item">
                    <div class="popover top">
                        <div class="arrow"></div>
                        <div class="popover-content">
                            Hata
                        </div>
                    </div>
                    <input type="text" id="input-dogumtarihi">
                    <label class="float" for="input-dogumtarihi">
                        Doğum Tarihi
                    </label>
                </div>

                <div class="hesabim__form__item">
                    <div class="popover top">
                        <div class="arrow"></div>
                        <div class="popover-content">
                            Hata
                        </div>
                    </div>
                    <input type="email" id="input-eposta" readonly="readonly" value="johndoe@gmail.com">
                    <label class="float" for="input-eposta">
                        E-posta
                    </label>
                </div>
                <div class="basket__left__fatura__adresi basket__left__fatura__adresi2">
                    <div class="basket__left__fatura__adresi__item basket__left__fatura__adresi__select">
                        <div class="popover top">
                            <div class="arrow"></div>
                            <div class="popover-content">
                                Hata
                            </div>
                        </div>
                        <label>İl</label>
                        <select class="wide">
                            <option value="istanbul">İstanbul</option>
                            <option value="ankara">Ankara</option>
                            <option value="izmir">İzmir</option>
                        </select>
                    </div>
                    <div class="basket__left__fatura__adresi__item basket__left__fatura__adresi__select">
                        <div class="popover top">
                            <div class="arrow"></div>
                            <div class="popover-content">
                                Hata
                            </div>
                        </div>
                        <label>İlçe</label>
                        <select class="wide">
                            <option value="atasehir">Ataşehir</option>
                            <option value="kadikoy">Kadıköy</option>
                            <option value="uskudar">Üsküdar</option>
                        </select>
                    </div>
                </div>
                <div class="hesabim__form__item">
                    <div class="popover top">
                        <div class="arrow"></div>
                        <div class="popover-content">
                            Hata
                        </div>
                    </div>
                    <input type="text" id="input-telefon">
                    <label class="float" for="input-telefon">
                        Telefon
                    </label>
                </div>
                <div class="hesabim__form__item form__item__checkbox">
                    <div class="pretty">
                        <input type="checkbox" id="kampanya-eposta"/>
                        <label for="kampanya-eposta"><i class="fa fa-check"></i>Kampanyalardan e-posta yoluyla haberdar olmak istiyorum.</label>
                    </div>
                </div>
                <div class="hesabim__form__item form__item__checkbox">
                    <div class="pretty">
                        <input type="checkbox" id="kampanya-sms"/>
                        <label for="kampanya-sms"><i class="fa fa-check"></i>Kampanyalardan SMS yoluyla haberdar olmak istiyorum.</label>
                    </div>
                </div>
                <div class="hesabim__form__item hesabim__form__button__container">
                    <a href="#" class="button button__large button__blue">Güncelle</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block script %}
    <script src="js/jquery.inputmask.bundle.min.js"></script>
    <script src="js/all-input.js"></script>
    <script src="js/inputmask.js"></script>
    <script src="js/jquery.nice-select.min.js"></script>
    <script>
        $(document).ready(function() {
            $('select').niceSelect();
        });
    </script>
{% endblock %}