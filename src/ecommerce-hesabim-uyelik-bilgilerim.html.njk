{% extends "partials/ecommerce-base.html.njk" %}

{% block head %}

{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <h2>HESABIM</h2>
            <div class="hesabim__navigation">
                <a href="">
                    <div class="active">
                        <h3>Üyelik Bilgilerim</h3>
                        <div class="hesabim__navigation__icon">
                            <i class="fa fa-address-card"></i>
                        </div>
                    </div>
                </a>
                <a href="">
                    <div>
                        <h3>Şifre İşlemleri</h3>
                        <div class="hesabim__navigation__icon">
                            <i class="fa fa-lock"></i>
                        </div>
                    </div>
                </a>
                <a href="">
                    <div>
                        <h3>Adres Bilgilerim</h3>
                        <div class="hesabim__navigation__icon">
                            <i class="fa fa-address-card"></i>
                        </div>
                    </div>
                </a>
                <a href="">
                    <div>
                        <h3>Siparişlerim</h3>
                        <div class="hesabim__navigation__icon">
                            <i class="fa fa-list-ul"></i>
                        </div>
                    </div>
                </a>
            </div>
            <div class="hesabim__form">
                <div class="hesabim__form__item">
                    <input type="text" id="input-isim">
                    <label class="float" for="input-isim">
                        İsim
                    </label>
                </div>
                <div class="hesabim__form__item">
                    <input type="text" id="input-soyisim">
                    <label class="float" for="input-soyisim">
                        Soyisim
                    </label>
                </div>
                <div class="hesabim__form__item">
                    <input type="email" id="input-eposta" readonly="readonly">
                    <label class="float" for="input-eposta">
                        E-posta
                    </label>
                </div>
                <div class="hesabim__form__item">
                    <input type="text" id="input-telefon">
                    <label class="float" for="input-telefon">
                        Telefon
                    </label>
                </div>
                <div class="hesabim__form__item form__item__checkbox">
                    <div>
                        <input type="checkbox" id="kampanya-eposta">
                    </div>
                    <div>
                        <label for="kampanya-eposta">Kampanyalardan e-posta yoluyla haberdar olmak istiyorum.</label>
                    </div>
                </div>
                <div class="hesabim__form__item form__item__checkbox">
                    <div>
                        <input type="checkbox" id="kampanya-sms">
                    </div>
                    <div>
                        <label for="kampanya-sms">Kampanyalardan SMS yoluyla haberdar olmak istiyorum.</label>
                    </div>
                </div>
                <div class="hesabim__form__item hesabim__form__button__container">
                    <a href="#" class="button button__large button__blue">Güncelle</a>
                </div>
            </div>
        </div>
{% endblock %}