{% extends "partials/ecommerce-base.html.njk" %}

{% block head %}

{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="container__login">
                <h2 class="title-blue">GİRİŞ YAP</h2>
            </div>
            <div class="container__login">
                <div class="container__login__form">
                    <div class="container__login__form__item popover-error">
                        <div class="popover top">
                            <div class="arrow"></div>
                            <div class="popover-content">
                                Geçerli bir e-posta adresi giriniz!
                            </div>
                        </div>
                        <input type="email" id="input-email">
                        <label class="float" for="input-email">
                            E-posta
                        </label>
                    </div>
                    <div class="container__login__form__item">
                        <div class="popover top">
                            <div class="arrow"></div>
                            <div class="popover-content">
                                Geçerli bir e-posta adresi giriniz!
                            </div>
                        </div>
                        <input type="password" id="input-password">
                        <label class="float" for="input-password">
                            Şifre
                        </label>
                    </div>
                    <div class="container__login__form__item login__form__remember__reset">
                        <div class="pretty">
                            <input type="checkbox" id="remember-me"/>
                            <label for="remember-me"><i class="fa fa-check"></i>Beni Hatırla</label>
                        </div>
                        <div>
                            <a href="">Şifremi Unuttum</a>
                        </div>
                    </div>
                    <div class="container__login__form__item login__button__container">
                        <buttton class="button button__blue button__large" href="#">Giriş Yap</buttton>
                        <buttton class="button button__facebook button__large" href="#">FACEBOOK İLE GİRİŞ YAP</buttton>
                        <buttton class="button button__green button__large" href="#">Yeni Üye Ol</buttton>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container__login__image">
        <img src="img/login.png">
    </div>
{% endblock %}

{% block script %}
    <script src="js/all-input.js"></script>
    <script src="js/jquery.min.js"></script>
{% endblock %}